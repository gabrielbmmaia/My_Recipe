<resources xmlns:tools="http://schemas.android.com/tools">
     Base application theme.
    <style name="Theme.MyRecipe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorPrimaryVariant">@color/shrine_pink_100</item>
        <item name="colorOnPrimary">@color/shrine_pink_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shrine_pink_900</item>
        <item name="colorSecondaryVariant">@color/shrine_pink_50</item>
        <item name="colorOnSecondary">@color/shrine_pink_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name ="android:fontFamily">@font/rubik</item>
    </style>

    <style name="Theme.MyRecipe.ActionBar" parent="Theme.MyRecipe">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

</resources>